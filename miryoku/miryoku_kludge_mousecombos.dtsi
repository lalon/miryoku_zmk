#define MIRYOKU_KLUDGE_MOUSECOMBOS_TERM 50
#define MIRYOKU_KLUDGE_MOUSECOMBOS_MACRO(LAYER, POSITION, BINDING) \
mousecombos_ ## LAYER ## _ ## POSITION { \
  layers = <LAYER>; \
  key-positions = <MIRYOKU_KLUDGE_MOUSECOMBOS_ ## POSITION>; \
  bindings = <BINDING>; \
  timeout-ms = <MIRYOKU_KLUDGE_MOUSECOMBOS_TERM>; \
};

/ {
  combos {
    compatible = "zmk,combos";
    MIRYOKU_KLUDGE_MOUSECOMBOS_MACRO(U_BASE, LEFTPINKIE, U_BTN2)
    MIRYOKU_KLUDGE_MOUSECOMBOS_MACRO(U_BASE, LEFTINNERINDEX, U_BTN1)
  };
};